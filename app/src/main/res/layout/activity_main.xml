<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/sel_country"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/select_country"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/CountrySpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Select Country"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_btn_bg_color"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/sel_country"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/sel_state"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/select_state"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/CountrySpinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/StateSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/sel_state"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_btn_bg_color"
            android:hint="Select State"
            android:drawableEnd="@drawable/ic_arrow"/>

        <TextView
            android:id="@+id/sel_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/select_city"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/StateSpinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/CitySpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/sel_city"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_btn_bg_color"
            android:hint="Select City"
            android:drawableEnd="@drawable/ic_arrow"/>

        <TextView
            android:id="@+id/sel_pin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/select_pincode"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/CitySpinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/PincodeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/sel_pin"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:hint="Select Pincode"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_btn_bg_color"
            android:drawableEnd="@drawable/ic_arrow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>